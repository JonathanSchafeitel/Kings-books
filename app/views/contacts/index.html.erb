<div class="container">
  <% flash.each do |type, msg| %>
    <div class="alert <%= bootstrap_class_for_flash(type) %> alert-dismissable fade show" role="alert">
      <%= msg %>
    <% end %>
  </div>
  <main>
    <div class="container" style="margin-bottom:5em;margin-top:5em;">
      <div class="row" >
        <div class="col-md-6 m-auto">
          <div class="heading">
            <h1>Contact us</h1>
          </div>
          <%= form_for @contact, html: { class: "form-signin mt-3" } do |f| %>
            <div class="form-group">
              <%= f.label :email, "Email" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :name, "Name" %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "Name", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :subject, "Subject" %><br />
              <%= f.text_field :subject, autofocus: true, autocomplete: "subject", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :content, "Content" %><br />
              <%= f.text_area :content, autofocus: true, autocomplete: "Content", class: "form-control" %>
            </div>
            <div class="actions mt-5">
              <%= f.submit "Send message", class: "btn btn-lg btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
