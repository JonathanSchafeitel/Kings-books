<!-- Div main-->
<div class="container">
  <div style="">
    <!-- Système flash message-->
    <% flash.each do |type, msg| %>
      <div class="alert <%= bootstrap_class_for_flash(type) %> alert-dismissable fade show" role="alert">
        <%= msg %>
      </div>
    <% end %>
    <div class="container" style="font-size:1.5em;">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body bg-primary text-white mailbox-widget pb-0">
              <h2 class="">Your Bookmark</h2>
              <ul class="nav nav-tabs custom-tab border-bottom-0 mt-4" id="myTab" role="tablist">
                <li class="nav-item">
                  <a class="nav-link active" id="inbox-tab" data-toggle="tab" aria-controls="inbox" href="#inbox" role="tab" aria-selected="true">
                    <span class="d-block d-md-none"><i class="ti-email"></i></span>
                    <span class="d-none d-md-block">
                      <h6>Main</h6>
                    </span></a>
                </li>
              </ul>
            </div>
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade active show" id="inbox" aria-labelledby="inbox-tab" role="tabpanel">
                <div>
                  <div class="row p-4 no-gutters align-items-center">
                    <div class="col-sm-12 col-md-6">
                    </div>
                  </div>
                  <!-- Mail list-->
                  <div class="table-responsive">
                    <table class="table email-table no-wrap table-hover v-middle mb-0 font-14">
                      <thead>
                        <tr>
                          <th scope="col"></th>
                          <th scope="col"># ID</th>
                          <th scope="col">Livre</th>
                          <th scope="col">Bookmark</th>
                          <th scope="col">Date</th>
                          <th scope="col">Delete</th>
                        </tr>
                      </thead>
                      <tbody>
                        <!-- row -->
                        <tr>
                          <!-- label -->
                          <% @bookmark.each do |bookmark| %>
                            <td class="pl-3">
                              <div class="custom-control custom-checkbox">
                                <i class="fa fa-bookmark" aria-hidden="true" style="color:red;"></i>
                                <label class="custom-control-label" for="cst1"></label>
                              </div>
                            </td>
                            <!-- star -->
                            <td> # <%= bookmark.id %></a></td>
                          <td>
                            <span class="mb-0 "><a href="<%= book_path(id: bookmark.book_id, page: bookmark.current_page) %>"><%= bookmark.name.capitalize %></a></span>
                          </td>
                          <!-- Current Page -->
                          <td>
                            <a class="link" href="<%= bookmark.name %>">
                              <span class="text-dark" style="display:inline-block;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;max-width: 20ch;">Tu es a la <%= bookmark.current_page %> ème page</span></a>
                          </td>
                          <!-- Time -->
                          <td class="text-muted"><%= bookmark.created_at.strftime("%m/%d/%Y") %></td>
                          <td>
                            <%= button_to "Delete", mybookmark_path(bookmark.id), method: :delete, class: "btn btn-danger", data: {turbo_method: :DELETE, turbo_confirm: "Are you sure you ?"} %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
